---
import Nav from '../components/Nav.astro';
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import SocialCard from '../components/SocialCard.astro';
---

<Layout title="About">
	<div class="container h-screen">
		<main>
			<Nav/>
			<div class="icon">
				<img class="icon"  src="/icon.png" alt="icon"/>
			</div>
			<h1 class="text-4xl font-black text-center">apple</h1>
			<p class="text-s text-center m-4 leading-tight">06 students<br>hobby -> photography<br></p>
			<SocialCard/>
			<div class="w-max m-4 typing">
				<p class="animate-typing overflow-hidden whitespace-nowrap border-r-4 border-r-white pr-5 text-xl text-white font-medium mt-8 mb-8">Hi, I'm apple!<br>This page is about me.</p>
			</div>
			<div class="about">

			</div>
			<div class="card">
				
				<Card
					href='python.png',
					title='Python',
					body='バックエンド開発',
					desc='Programming',
				/>
				<Card
					href='/typescript.png',
					title='Typescript',
					body='Web フロントエンド開発',
					desc='Programming',
				/>
				<Card 
					href='/photoshop.png',
					title='Photoshop',
					body='画像編集・合成'
					desc='Software'
				/>
				<Card
					href='/illustrator.png',
					title='Illustrator',
					body='グラフィック作成',
					desc='Software'
				/>
				<Card
					href='aftereffects.png',
					title='AfterEffects',
					body='VFX・動画編集',
					desc='Software'
				/>
				<Card
					href='aviutl.png',
					title='Aviutl',
					body='モーショングラフィックス制作',
					desc='Software'
				/>
			</div>
		</main>
	</div>
	
</Layout>

<style>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;



	main {
		margin: auto;
		padding: 1rem;
		width: 992px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	.container{
		margin: 0 auto;
	}
	.icon {
		display: flex;
		margin: 1em auto .5em;
	}
	img.icon { 
		border-radius: 50%;
		width: 70%;
		max-width: 400px;
		object-fit: cover;
		border: solid 4px;	
	}
</style>
